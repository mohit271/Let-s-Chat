<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatDetailActivity"
    android:background="@color/grayBackground">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/chatToolbar"
        android:background="@color/primaryColor"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backToList"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_back"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageChat"
                android:layout_width="75dp"
                android:src="@drawable/userpic"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/backToList"
                android:layout_weight="1.5"
               android:padding="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_toRightOf="@+id/profileImageChat"
                android:id="@+id/userNameChat"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/telephone"
                android:layout_gravity="center"
                android:text="Name"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:padding="11dp"
                android:id="@+id/telephone"
                android:layout_weight="1"
                android:layout_toLeftOf="@+id/video"
                app:tint="@color/white"
                android:layout_height="wrap_content"
                android:src="@drawable/telephone"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:id="@+id/video"
                android:padding="11dp"
                app:tint="@color/white"
                android:layout_toLeftOf="@+id/dots"
                android:layout_height="wrap_content"
                android:src="@drawable/video"/>
            <ImageView
                android:id="@+id/dots"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:padding="12dp"
                app:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:src="@drawable/dots"/>


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatToolbar"
        android:layout_above="@+id/llBottom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rvChatPersonal"/>
    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textColorHint="@color/grayBackground"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:id="@+id/etTextMessage"
            android:hint="Type Your Message"
            android:background="@drawable/message_bg"
            android:layout_weight="4"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/btnSendMessage"
            app:tint="@color/black"
            android:layout_height="50dp"
            android:src="@drawable/sendmessage"/>
    </LinearLayout>
</RelativeLayout>